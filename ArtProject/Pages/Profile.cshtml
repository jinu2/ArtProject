@page
@model PrivacyModel
@{
    ViewData["Title"] = "Profil";
}
@*<h1>@ViewData["Title"]</h1>*@


<body>

    @if (Model.isLogged)
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-content">

                        <!-- ***** Banner Start ***** -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="main-profile ">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <img src="~/images/profile2.jpg" alt="" style="border-radius: 23px;">
                                        </div>
                                        <div class="col-lg-4 align-self-center">
                                            <div class="main-info header-text">
                                                <span>Member</span>
                                                <h4>@Model.userLogged.Name</h4>
                                                <p>You can discover new exhibits in our website</p>
                                                @*<div class="main-border-button">
                                                    <a href="#">Start Live Stream</a>
                                                </div>*@
                                                <span>
                                                    <form method="post" asp-page-handler="DeleteRequest">
                                                        <button type="submit" style="border:none; background:none; color:white;">Delete Account</button>
                                                        <input type="hidden" name="UserName" value=@Model.userLogged.Username asp-for="UserName">
                                                    </form>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 align-self-center">
                                            <ul>
                                                <li>E-Mail <span>@Model.userLogged.Email</span></li>
                                                <li>Age <span>@Model.userLogged.Age</span></li>
                                                <li>Active Tickets <span>None</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="clips">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="heading-section">
                                                            <h4><em>Your</em> Tickets</h4>
                                                        </div>
                                                    </div>
                                                    @for (var i = 16; i < 20; i++)
                                                       {
                                                        var item = Model.exhData.data[i];
                                                        if (String.IsNullOrEmpty(item.gallery_title))
                                                            item.gallery_title = "Gallery 404";
                                                        <div class="col-lg-3 col-sm-6">
                                                            <div class="item" style="text-align: center;">
                                                                <div>
                                                                    <a href="#" target="_blank">
                                                                        <img src="@item.image_url" alt="" style="border-radius: 23px; height: 150px;">
                                                                    </a>
                                                                </div>
                                                                <div class="down-content" style="margin-top: 18px;">
                                                                    <h4>@item.gallery_title</h4>
                                                                </div>
                                                            </div>
                                                        </div>
                                                     }
                                                    <div class="col-lg-12">
                                                        <div class="main-button">
                                                            <a href="#">Load More Tickets</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- ***** Banner End ***** -->
                        <!-- ***** Gaming Library Start ***** -->
