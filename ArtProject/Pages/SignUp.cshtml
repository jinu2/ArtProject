@page
@model ArtProject.Pages.SignUpModel
@{
}

<body>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-content">
                    <h1 class="display-1">Sign Up</h1>
                    <form method="post" class="formClass" asp-page-handler="UserRequest">
                        <input type="text" asp-for="Name" class="form-control" placeholder="Name"/>
                        <input type="text" asp-for="Age" class="form-control" placeholder="Age"/>
                        <input type="text" asp-for="Email" class="form-control" placeholder="Email"/>
                        <input type="text" asp-for="Username" class="form-control" placeholder="Username"/>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password"/>
                        <button type="submit" class="btn btn-primary">Submit</button>                       
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

<style>
    .form-control {
        max-width: 30%;
        margin: 10px;
        margin-left: auto;
        margin-right: auto;
    }

    .col-lg-12 {
        text-align: center;
    }

    .formClass button {
        margin-top: 20px;
    }

    .display-1 {
        margin-bottom: 30px;
    }
</style>